<UserControl
    x:Class="OpenSilver.Samples.Showcase.OpenMapApp_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilver.Samples.Showcase">

    <ContentControl Style="{StaticResource Card_Style}" Width="200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="Open map App" Foreground="#d30091" Background="#FF92BEAC" Style="{StaticResource HeaderControl_Style}"/>
            <StackPanel x:Name="SampleContainer" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Open map Application" Click="OpenMapAppButton_Click" Height="32" Foreground="#d30091" Background="{DynamicResource NativeApiButtonBackground}" FontWeight="Bold"/>
            </StackPanel>
            <local:ViewSourceButton Grid.Row="2"
                 Background="#d30091">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/Maui_Hybrid/OpenMapApp"
                             FileName="OpenMapApp_Demo.xaml" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/Maui_Hybrid/OpenMapApp"
                             FileName="OpenMapApp_Demo.xaml.cs" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/Maui_Hybrid/OpenMapApp"
                             FileName="OpenMapApp_Demo.xaml.vb" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/Maui_Hybrid/OpenMapApp"
                             FileName="OpenMapApp_Demo.xaml.fs" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
