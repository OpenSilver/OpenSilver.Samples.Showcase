    <ContentControl Style="{StaticResource Card_Style}" Width="245">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="Measure/Arrange" Foreground="#FFC7C228" Background="#FFC5B58B" Style="{StaticResource HeaderControl_Style}"/>
            <local:RadialPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="220" Height="150">
                <TextBlock Text="one"/>
                <TextBlock Text="two"/>
                <TextBlock Text="three"/>
                <TextBlock Text="four"/>
                <TextBlock Text="five"/>
                <TextBlock Text="six"/>
            </local:RadialPanel>
            <local:ViewSourceButton Grid.Row="2" Background="#FFC7C228">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Features/MeasureArrange"
                                            FileName="RadialPanel.cs" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Features/MeasureArrange"
                                            FileName="MeasureArrange_Demo.xaml" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Features/MeasureArrange"
                                            FileName="MeasureArrange_Demo.xaml.cs" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Features/MeasureArrange"
                                            FileName="MeasureArrange_Demo.xaml.vb" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Features/MeasureArrange"
