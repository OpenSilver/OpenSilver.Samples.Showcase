<UserControl
    x:Class="OpenSilver.Samples.Showcase.RadioButton_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="clr-namespace:OpenSilver.Samples.Showcase">
    <ContentControl Style="{StaticResource Card_Style}" Width="200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="RadioButton" Foreground="#FFB3CE00" Background="#FFB2BD69" Style="{StaticResource HeaderControl_Style}"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <RadioButton x:Name="RadioButton1" Content="Option 1" Foreground="#FF869A00" FontWeight="Bold" Click="RadioButton_Click"/>
                <RadioButton x:Name="RadioButton2" Content="Option 2" Margin="10,0,0,0" Foreground="#FF869A00" FontWeight="Bold" Click="RadioButton_Click"/>
            </StackPanel>
            <local:ViewSourceButton Grid.Row="2"
                                    Background="#FFB3CE00">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/RadioButton"
                                                FileName="RadioButton_Demo.xaml" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/RadioButton"
                                                FileName="RadioButton_Demo.xaml.cs" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/RadioButton"
                                                FileName="RadioButton_Demo.xaml.vb" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/RadioButton"
                                                FileName="RadioButton_Demo.xaml.fs" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
