<UserControl
    x:Class="OpenSilver.Samples.Showcase.NumericUpDown_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="clr-namespace:OpenSilver.Samples.Showcase">
    <ContentControl Style="{StaticResource Card_Style}" Width="200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="NumericUpDown" Foreground="#FF3ADE8F" Background="#75B595" Style="{StaticResource HeaderControl_Style}"/>
            <NumericUpDown Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Minimum="0" Maximum="100" />
            <local:ViewSourceButton Grid.Row="2"
                                    Background="#FF3ADE8F">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/NumericUpDown"
                                                FileName="NumericUpDown_Demo.xaml" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/NumericUpDown"
                                                FileName="NumericUpDown_Demo.xaml.cs" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/NumericUpDown"
                                                FileName="NumericUpDown_Demo.xaml.vb" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/NumericUpDown"
                                                FileName="NumericUpDown_Demo.xaml.fs" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/NumericUpDown/Styles"
                                                FileName="DefaultNumericUpDownStyle.xaml" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
