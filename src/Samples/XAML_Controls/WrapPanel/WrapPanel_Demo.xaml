<UserControl
    x:Class="OpenSilver.Samples.Showcase.WrapPanel_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilver.Samples.Showcase">
    <ContentControl Style="{StaticResource Card_Style}" Width="200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="WrapPanel" Foreground="#FFB1C28C" Background="#FFB9CD89" Style="{StaticResource HeaderControl_Style}"/>
            <WrapPanel Grid.Row="1" Background="{DynamicResource Theme_ControlBackgroundBrush}" Width="100" Height="100">
                <Border Width="20" Height="20" Background="#FFB9E58D" Margin="5"/>
                <Border Width="30" Height="20" Background="#FFB9E58D" Margin="5"/>
                <Border Width="20" Height="20" Background="#FFB9E58D" Margin="5"/>
                <Border Width="25" Height="20" Background="#FFB9E58D" Margin="5"/>
                <Border Width="20" Height="20" Background="#FFB9E58D" Margin="5"/>
                <Border Width="15" Height="20" Background="#FFB9E58D" Margin="5"/>
                <Border Width="30" Height="20" Background="#FFB9E58D" Margin="5"/>
            </WrapPanel>
            <local:ViewSourceButton Grid.Row="2"
                                    Background="#FFBDE567">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/WrapPanel"
                                                FileName="WrapPanel_Demo.xaml" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/WrapPanel"
                                                FileName="WrapPanel_Demo.xaml.cs" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/WrapPanel"
                                                FileName="WrapPanel_Demo.xaml.vb" />
                    <local:ViewSourceButtonInfo RelativePath="src/Samples/XAML_Controls/WrapPanel"
                                                FileName="WrapPanel_Demo.xaml.fs" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
