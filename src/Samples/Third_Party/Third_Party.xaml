<UserControl
    x:Class="OpenSilver.Samples.Showcase.Third_Party"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilver.Samples.Showcase">
    
    <Border Background="{DynamicResource Theme_ContainerBackgroundBrush}" CornerRadius="6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="22,22,0,0">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="3" Color="Black" BlurRadius="10" Opacity="0.1" />
        </Border.Effect>
        
        <StackPanel Margin="0,0,20,20">
            <Grid>
                <TextBlock Text="Third-Party Components" Foreground="#FF2299A1" Style="{StaticResource PageHeader_Style}"/>
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Third-Party Components" Style="{StaticResource PageHeader_Style}" Foreground="Transparent"/>
                    <local:SearchControl HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                    <Border Width="30"/>
                </WrapPanel>
            </Grid>

            <StackPanel Margin="30,5,0,0">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Margin" Value="0,10,0,0"/>
                    </Style>
                </StackPanel.Resources>

                <TextBlock>
                    • Telerik UI for Silverlight*
                    (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/telerik.html" TargetName="_blank">Doc</Hyperlink>
                    | <Hyperlink NavigateUri="https://opensilverdemos.azurewebsites.net/telerikshowcase/release" TargetName="_blank">Demo</Hyperlink>)
                </TextBlock>
                <TextBlock Text="• Telerik Kendo UI* (via JavaScript interop)"/>
                <TextBlock>
                    • DevExpress for Silverlight*
                    (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/devexpress.html" TargetName="_blank">Doc</Hyperlink>)
                </TextBlock>
                <TextBlock Text="• DevExpress DevExtreme*"/>
                <TextBlock Text="• SignalR"/>
                <TextBlock>
                        • Syncfusion Essential JS* (via JavaScript interop)
                    (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/syncfusion.html" TargetName="_blank">Doc</Hyperlink>)
                </TextBlock>
                <TextBlock>
                    • Open RIA Services
                    (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/ria-services.html" TargetName="_blank">Doc</Hyperlink>)
                </TextBlock>
                <TextBlock>
                    • PRISM (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/prism.html" TargetName="_blank">Doc</Hyperlink>)
                </TextBlock>
                <TextBlock>
                    • MEF (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/mef.html" TargetName="_blank">Doc</Hyperlink>)
                </TextBlock>
                <TextBlock>
                    • Unity (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/unity.html" TargetName="_blank">Doc</Hyperlink>)
                </TextBlock>
                <TextBlock>
                    • OData (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/odata.html" TargetName="_blank">Doc</Hyperlink>)
                </TextBlock>
                <TextBlock>
                    • MVVM Light
                    (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/galasoft-mvvm-light.html" TargetName="_blank">Doc</Hyperlink>)
                </TextBlock>
                <TextBlock>
                    • Newtonsoft Json
                    (<Hyperlink NavigateUri="https://doc.opensilver.net/documentation/3rd-party-libraries/newtonsoft-json-net.html" TargetName="_blank">Doc</Hyperlink>)
                </TextBlock>
                <TextBlock Text="• Caliburn.Micro"/>
                <TextBlock Text="• PostSharp"/>
                <TextBlock Text="• Blacklight Controls"/>
                <TextBlock Text="• Google Protobuf"/>
                <TextBlock Text="• Reactive Extensions"/>
                <TextBlock Text="• MS Expression Interactions/Behaviors"/>
                <TextBlock Text="• Microsoft Enterprise Library"/>
                <TextBlock Text="• Plotly.js (via JavaScript interop)"/>
                <TextBlock Text="• More..."/>
            </StackPanel>

            <TextBlock Text="*Note: a license from the third-party vendor is required." FontSize="12" Foreground="#FF666666" TextWrapping="Wrap" Margin="22,10,0,0" FontStyle="Italic"/>
        </StackPanel>
    </Border>
</UserControl>
