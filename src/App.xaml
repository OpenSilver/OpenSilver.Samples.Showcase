<Application
    x:Class="OpenSilver.Samples.Showcase.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mt="http://opensilver.net/themes/modern"
    xmlns:local="using:MaterialDesign_Styles_Kit">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Other/Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_CommonResources.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_Button_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_Card_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_CheckBox_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_ChildWindow_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_ComboBox_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_ContextMenu_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_DatePicker_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_Expander_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_Popup_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_PasswordBox_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_RadioButton_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_TabControl_Styles.xaml"/>
                <ResourceDictionary Source="Other/MaterialDesign_Styles_Kit/MaterialDesign_TextBox_Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.Theme>
        <mt:ModernTheme CurrentPalette="Light">
            <mt:ModernTheme.DarkPalette>
                <mt:DarkPalette ContainerBackgroundColor="#FF1A1A1A" />
            </mt:ModernTheme.DarkPalette>
        </mt:ModernTheme>
    </Application.Theme>
</Application>
