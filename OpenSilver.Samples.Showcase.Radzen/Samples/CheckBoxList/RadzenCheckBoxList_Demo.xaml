<UserControl
    x:Class="OpenSilver.Samples.Showcase.RadzenCheckBoxList_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:razor="clr-namespace:OpenSilver.Blazor;assembly=OpenSilver.Blazor"
    xmlns:local="clr-namespace:OpenSilver.Samples.Showcase">

    <ContentControl Style="{StaticResource Card_Style}" Width="220">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="CheckBoxList" Foreground="#FFFF81E3" Background="#FFCB9DC1" Style="{StaticResource HeaderControl_Style}"/>
            <StackPanel Grid.Row="1">
                <TextBlock TextWrapping="Wrap">
                    <Run>Currently selected items: </Run>
                    <Run Text="{Binding CheckedItems}"/>
                </TextBlock>
                <razor:RazorComponent Margin="0,20,0,0" Height="170">
                    @using Radzen
@using Radzen.Blazor

                    <div class="rz-text-align-center">
                        <RadzenCheckBoxList @bind-Value=@values TValue="int" Orientation="global::Radzen.Orientation.Vertical" Change="{Binding CheckBoxListChangeDel}">
                            <Items>
                                <RadzenCheckBoxListItem Text="Orders" Value="1" />
                                <RadzenCheckBoxListItem Text="Employees" Value="2" />
                                <RadzenCheckBoxListItem Text="Customers" Value="3" />
                            </Items>
                        </RadzenCheckBoxList>
                    </div>

                    @code {
    IEnumerable<int>values = new int[] { 1 };
}
                </razor:RazorComponent>
            </StackPanel>
            <!--<local:ViewSourceButton Grid.Row="2" Background="#FFFF81E3">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo RelativePath="OpenSilver.Samples.Showcase.Radzen/Samples"
                                                FileName="RadzenDataGrid_Demo.xaml" />
                    <local:ViewSourceButtonInfo RelativePath="OpenSilver.Samples.Showcase.Radzen/Samples"
                                                FileName="RadzenDataGrid_Demo.xaml.cs" />
                    <local:ViewSourceButtonInfo RelativePath="OpenSilver.Samples.Showcase.Radzen/Samples"
                                                FileName="Employees.cs" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>-->
        </Grid>
    </ContentControl>
</UserControl>
